@using UnobtrusiveMVCTechniques.Helpers
@model UnobtrusiveMVCTechniques.Controllers.TestViewModel

@{
    ViewBag.Title = "Custom Validation Test - Unobtrusive MVC Techniques";
}

<h1>Custom Validation Test</h1>
<h2>@ViewContext.RouteData.Values["action"]</h2>

@if (ViewBag.Success != null)
{
    <p>Action successfully performed!</p>
}
else
{
    using (Html.BeginForm())
    {
        @Html.OutputField(m => m.UserName)
        <input type="submit" value="Submit" />
    }
}
